#include <iostream>
using namespace std;

int main()
{
    // Defining Arrays:
    int mathmarks[4];
    mathmarks[0] = 78;
    mathmarks[1] = 478;
    mathmarks[2] = 378;
    mathmarks[3] = 778;
    cout << "These are maths marks" << endl;
    cout << mathmarks[0] << endl;
    cout << mathmarks[1] << endl;
    cout << mathmarks[2] << endl;
    cout << mathmarks[3] << endl;

    int marks[] = {23, 45, 56, 89};
    cout << "\nThese are marks" << endl;
    cout << marks[0] << endl;
    cout << marks[1] << endl;
    cout << marks[2] << endl;
    cout << marks[3] << endl;

    // Changing the value of an array:
    marks[2] = 778;
    cout << "marks[2] after altering " << marks[2] << endl;

    // printing the value of arrays using loops:

    // for-loop:
    for (int i = 0; i < 4; i++)
    {
        cout << "The value of marks " << i << " is " << marks[i] << endl;
    }

    // while-loop:
    int i = 0;
    while (i < 4)
    {
        cout << "The value of marks " << i << " is " << marks[i] << endl;
        i++;
    }

    // do-while:
    do
    {
        cout << "The value of marks " << i << " is " << marks[i] << endl;
        i++;
    } while (i < 4);
    
    // Pointers and Arrays:
    int* p=marks;
    cout<< *(p++) <<endl;
    cout<< *(++p) <<endl;
    cout<< "The value of *p is "<< *p <<endl;
    cout<< "The value of *(p+1) is "<< *(p+1) <<endl;
    cout<< "The value of *(p+2) is "<< *(p+2) <<endl;
    cout<< "The value of *(p+3) is "<< *(p+3) <<endl;
    
    
    return 0;
  }  
