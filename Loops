#include <iostream>
using namespace std;

int main()
{
  // LOOPS (WHILE, DO WHILE AND FOR LOOP):
    
    // while:
    int index=0;
    while(index<34)
    {
        cout<<"We are at index number "<<index<<endl;
        index=index+1;

    }

    cout<<endl<<endl;
    
    // do while (will execute atleast once, no matter if the condition is true or not):

    do
    {
        cout<<"We are at index number "<<index<<endl;
        index=index+1;

    }

while (index>3538);
{
        cout<<"We are at index number "<<index<<endl;
        index=index+1;
}

cout<<endl<<endl;
    
    // for loop:
    for (int i = 0; i <= 34; i++)
    {
        cout<<"The value of i is: "<<i <<endl;
    }
    

    return 0;
}
