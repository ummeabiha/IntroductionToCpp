#include <iostream>
using namespace std;

int main()
{
    // Pointers:

    int a = 3;       
    int* b = &a;     // & --> address of operator  // * --> (value at) dereference operator
    cout<< "The address of a is " << b << endl;        // (holds address of a)
    cout<< "The address of a is " << &a <<endl;
    cout<< "The value at address of b is " << *b <<endl;
    

    return 0;
}
