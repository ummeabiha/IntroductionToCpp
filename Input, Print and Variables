#include <iostream>
using namespace std;

int main()
{
    cout << "Hello World" << endl;
    cout << "Sum of 7 and 8 is: " << 7 + 8 << endl;

    // Defining Variables:
    //  integers:
    //  int a,b,c;

    short sa = 9;
    cout << sa << endl;

    // how many bytes it will allow? ascending order:
    // short a;
    // int b;
    // long c;
    // long long d;

    float score1 = 45.5;

    // cannot change the value of score2 as we wrote const before it:
    double const score2 = 45.35;
    long double score3 = 45.332;

    // reassigning value to the score1:
    score1 = 34.2;
    cout << "The score is: " << score1 << endl;

    // camelCase Notation:
    int marksInMaths = 83;
    cout << "The marks in math is: " << marksInMaths << endl;
         
    return 0;
    >>
         
         

    // TAKING USER INPUT AND AIRTHEMATIC OPERATORS:
    int a, b;

    cout << "Enter first number: " << endl;
    cin >> a;

    cout << "Enter second number: " << endl;
    cin >> b;

    cout << "a+b is: " << a + b << endl;
    cout << "a-b is: " << a - b << endl;
    cout << "a*b is: " << a * b << endl;
    cout << "a/b is: " << a / b << endl;

    //    for floating ans:
    cout << "a/b is: " << (float)a / b << endl
         << endl;
